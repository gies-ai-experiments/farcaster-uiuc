# Database Configuration
DB_NAME=farcaster
DB_USER=farcaster
DB_PASSWORD=farcaster_password
DB_HOST=postgres
DB_PORT=5432

# Snapchain Configuration
# Snapchain runs locally and connects to the Farcaster network automatically
# No additional configuration required for basic operation

# Replicator Configuration
LOG_LEVEL=info
HUB_HOST=snapchain
HUB_SSL=false
POSTGRES_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
REDIS_URL=redis://redis:6379
STATSD_HOST=statsd:8125
COLORIZE=true
WEB_UI_PORT=9000
CONCURRENCY=4
PARTITIONS=1

# Web Configuration
WEB_HOST_URL=localhost

# Redash Configuration
REDASH_SECRET_KEY=your-secret-key-here
REDASH_COOKIE_SECRET=your-cookie-secret-here 